<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frag_pill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondary"
        tools:context=".pill.PillFragment"
        tools:layout="@layout/fragment_pill">

        <TimePicker
            android:id="@+id/set_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:timePickerMode="spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/alarmButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/alarmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_alarm_button"
            app:layout_constraintBottom_toBottomOf="@+id/set_alarm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/set_alarm"
            app:layout_constraintTop_toTopOf="@+id/set_alarm"
            tools:text="Set alarm" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/pill_actions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_alarm" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/pill_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Register_pill_taken_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <Button
                    android:id="@+id/register_pill_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/pill_normal_icon_foreground"
                    app:layout_constraintBottom_toTopOf="@+id/pill_taken_button_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pill_taken_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pill_taken"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/register_pill_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Register_new_pill_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <Button
                    android:id="@+id/create_pill_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/pill_add_icon_foreground"
                    app:layout_constraintBottom_toTopOf="@+id/create_pill_button_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/create_pill_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_pill"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/create_pill_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Remove_registered_pill_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <Button
                    android:id="@+id/delete_pill_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/pill_disable_icon_foreground"
                    app:layout_constraintBottom_toTopOf="@id/delete_pill_button_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/delete_pill_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove_pill"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/delete_pill_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/pill_week"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pill_actions"
            tools:visibility="invisible" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/pill_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/pill_screen_title1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Mon"
                    android:textSize="7pt"
                    app:layout_constraintBottom_toTopOf="@+id/date_circle_mon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/date_circle_mon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/round_button"
                    android:clickable="false"
                    android:text="7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/monday" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/pills_taken_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/date_circle_mon">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="1dp">

                        <Button
                            android:id="@+id/circle_pill_mon_1"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/round_button"
                            android:clickable="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pills_taken_mon" />

                        <Button
                            android:id="@+id/circle_pill_mon_2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/round_button"
                            android:clickable="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/circle_pill_mon_1"
                            app:layout_constraintTop_toBottomOf="@+id/pills_taken_mon" />

                        <Button
                            android:id="@+id/circle_pill_mon_3"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/round_button"
                            android:clickable="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/circle_pill_mon_2"
                            app:layout_constraintTop_toBottomOf="@+id/pills_taken_mon" />

                        <Button
                            android:id="@+id/circle_pill_mon_4"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/round_button"
                            android:clickable="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/circle_pill_mon_3"
                            app:layout_constraintTop_toBottomOf="@+id/pills_taken_mon" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:showDividers="middle">

                        <Button
                            android:id="@+id/circle_pill_mon_1_2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/round_button"
                            android:clickable="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pills_taken_mon" />

                        <Button
                            android:id="@+id/circle_pill_mon_2_2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/round_button"
                            android:clickable="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/circle_pill_mon_1_2"
                            app:layout_constraintTop_toBottomOf="@+id/pills_taken_mon" />

                        <Button
                            android:id="@+id/circle_pill_mon_3_2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/round_button"
                            android:clickable="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/circle_pill_mon_2_2"
                            app:layout_constraintTop_toBottomOf="@+id/pills_taken_mon" />

                        <Button
                            android:id="@+id/circle_pill_mon_4_2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/round_button"
                            android:clickable="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/circle_pill_mon_3_2"
                            app:layout_constraintTop_toBottomOf="@+id/pills_taken_mon" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue"
                    android:textSize="7pt"
                    app:layout_constraintBottom_toTopOf="@+id/date_circle_tue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/date_circle_tue"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/round_button"
                    android:clickable="false"
                    android:text="8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tuesday" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/pills_taken_tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/date_circle_tue">

                    <Button
                        android:id="@+id/circle_pill_tue_1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/round_button"
                        android:clickable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pills_taken_tue" />

                    <Button
                        android:id="@+id/circle_pill_tue_2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/round_button"
                        android:clickable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/circle_pill_tue_1"
                        app:layout_constraintTop_toBottomOf="@+id/pills_taken_tue" />

                    <Button
                        android:id="@+id/circle_pill_tue_3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/round_button"
                        android:clickable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/circle_pill_tue_2"
                        app:layout_constraintTop_toBottomOf="@+id/pills_taken_tue" />

                    <Button
                        android:id="@+id/circle_pill_tue_4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/round_button"
                        android:clickable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/circle_pill_tue_3"
                        app:layout_constraintTop_toBottomOf="@+id/pills_taken_tue" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/pill_screen_title1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pill_week" />

        <TextView
            android:id="@+id/pill_screen_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/user_header"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toStartOf="@+id/pill_screen_title2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            app:layout_constraintVertical_bias="0.02"
            tools:text="Pill" />

        <TextView
            android:id="@+id/pill_screen_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/delivered_header"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/pill_screen_title3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pill_screen_title1"
            app:layout_constraintTop_toTopOf="@+id/pill_screen_title1"
            tools:text="Date" />

        <TextView
            android:id="@+id/pill_screen_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/pickup_header"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pill_screen_title2"
            app:layout_constraintTop_toTopOf="@+id/pill_screen_title2"
            tools:text="Taken" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pill_log_entries"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pill_screen_title1"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="-89dp" />

        <TextView
            android:id="@+id/pill_logs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center|center_horizontal|center_vertical"
            android:textColor="@color/super_red"
            android:textSize="30sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/pill_log_entries"
            app:layout_constraintEnd_toEndOf="@+id/pill_log_entries"
            app:layout_constraintStart_toStartOf="@+id/pill_log_entries"
            app:layout_constraintTop_toTopOf="@+id/pill_log_entries"
            tools:text="Error: No content received" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>