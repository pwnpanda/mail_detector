<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pill_create_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_pill_name_holder"
        android:layout_width="280dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/create_pill_create_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/create_pill_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_pill_name_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/pill_input_field" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/create_pill_color"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="@+id/create_pill_name_holder"
        app:layout_constraintBottom_toBottomOf="@+id/create_pill_name_holder"
        app:layout_constraintStart_toEndOf="@+id/create_pill_name_holder"
        app:layout_constraintEnd_toEndOf="parent"
        android:hapticFeedbackEnabled="true"
        />

    <Button
        android:id="@+id/create_pill_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pill_create_button"
        app:layout_constraintTop_toBottomOf="@+id/create_pill_name_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/create_pill_cancel_button"/>
    <Button
        android:id="@+id/create_pill_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_button"
        app:layout_constraintTop_toTopOf="@id/create_pill_create_button"
        app:layout_constraintBottom_toBottomOf="@id/create_pill_create_button"
        app:layout_constraintStart_toEndOf="@id/create_pill_create_button"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
