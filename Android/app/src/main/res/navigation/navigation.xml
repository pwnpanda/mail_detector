<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.robinlunde.mailbox.MainActivity"
        android:label="activity_main"
        app:action="@string/username_button"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.robinlunde.mailbox.alert.BlankFragment"
        android:label="fragment_alert"
        tools:layout="@layout/fragment_alert" >
        <action
            android:id="@+id/action_blankFragment_to_mainActivity2"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/blankFragment2"
        android:name="com.robinlunde.mailbox.overview.BlankFragment"
        android:label="fragment_overview"
        tools:layout="@layout/fragment_overview" />
</navigation>